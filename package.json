{
  "name": "@bszhct/driver",
  "version": "1.0.1",
  "description": "基于 shepherd.js 封装的新手引导组件",
  "scripts": {
    "dev": "vue-cli-service serve",
    "dev:lib": "vue-cli-service build --target lib --name BsDriver --filename bs-driver --dest lib src/components/index.js --watch",
    "build": "vue-cli-service build",
    "build:lib": "vue-cli-service build --target lib --name BsDriver --filename bs-driver --dest lib src/components/index.js",
    "lint": "vue-cli-service lint"
  },
  "main": "lib/bs-driver.common.js",
  "dependencies": {
    "ant-design-vue": "1.7.2",
    "core-js": "^3.6.4",
    "shepherd.js": "^8.3.1",
    "vue": "^2.6.11",
    "vue-router": "^3.1.6",
    "vuex": "^3.1.3"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.3.0",
    "@vue/cli-plugin-eslint": "^4.3.0",
    "@vue/cli-plugin-router": "^4.3.0",
    "@vue/cli-plugin-vuex": "^4.3.0",
    "@vue/cli-service": "^4.3.0",
    "@vue/eslint-config-standard": "^5.1.2",
    "babel-eslint": "^10.1.0",
    "babel-plugin-import": "^1.13.0",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^6.2.2",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "lint-staged": "^9.5.0",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "no-unused-vars": "warn"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "src/*.{js,jsx,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "files": [
    "lib"
  ]
}
